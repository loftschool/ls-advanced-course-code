include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        .welcome-section 
          section.hero
          
            .container.hero__container
              header.header
                .logo BA
                .header__menu
                  nav.nav
                    ul.nav__list
                      - var menu = ['Главная', 'Главная', 'Главная' , 'Главная' , 'Главная'];
                      each item in menu
                        li.nav__item
                          a(href="").nav__link #{item}
                .header__links
                  ul.socials
                    - var socials = ['insta', 'vk', 'github'];

                    each item in socials
                      li.socials__item
                        a(href="").socials__link
                          +icon(`${item}`, 'socials__icon')
              .hero__content
                .user-info
                  .user-info__desc Личный сайт веб-разработчика
                  .user-info__name Владимир Астаханов
              .hero__bottom-buttons()
                .scroll-down-button Скролл

          section.about
            .container
              .about__left
                .user
                  .user__avatar
                    img(src="", alt="").user__avatar-pic
                  .user__data
                    table.user__data-table
                      - 
                        var data = [
                          ['проживаю', 'новосибирск'],
                          ['проживаю', 'новосибирск'],
                          ['проживаю', 'новосибирск'],
                        ]
                      each row in data
                        tr.user__data-row
                          td.user__data-cell #{row[0]}
                          td.user__data-cell #{row[1]}

            .about__right
          
